{% load static %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="{% static 'bootstrap/css/bootstrap.min.css' %}" rel="stylesheet">
    <link href="{% static 'css/style.css' %}" rel="stylesheet">
    <title>RateEverything</title>
</head>
<body>
    <div class="header">
        <div class="container-lg">
            <div class="navbar navbar-expand-lg bg-body-tertiary">
                <a class="navbar-brand" href="/">RateEverything</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Главная</a>
                        </li>
                        {% if user.is_authenticated %}
                        <li class="nav-item">
                            <a class="nav-link" href="#"></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Мои списки
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Смотреть позже</a></li>
                                <li><a class="dropdown-item" href="#">Просмотренные</a></li>
                                <li><a class="dropdown-item" href="#">Перепросмотр</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Другие списки</a></li>
                            </ul>
                        </li>
                        {% endif %}
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Поиск" aria-label="Search">
                        <button class="btn" type="submit">Поиск</button>
                    </form>
                    <a class="profile">
                        <span></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="main">
        <div class="container-lg" style="min-height: 100px;padding: 0 30px;">
            {% block content %}
            {% endblock content %}
        </div>
    </div>
    <script src="{% static 'bootstrap/js/bootstrap.bundle.min.js' %}"></script>
    {% block script %}
    {% endblock script %}
</body>
</html>